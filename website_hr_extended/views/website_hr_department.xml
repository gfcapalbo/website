<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="website_hr_extended assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_hr_extended/static/src/js/website_hr_extended.js"></script>
                <link rel="stylesheet" href="/website_hr_extended/static/src/css/website_hr_extended.css"/>
            </xpath>
        </template>

        <template id="employee_form_extended" model="ir.ui.view"  inherit_id="website_hr.aboutus">
            <xpath expr="//div[@t-field='employee.public_info']" position="after">
                <t t-if="employee.work_email">
                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                    <div t-field="employee.work_email"/>
                </t>
                <t t-if="employee.github_website">
                    <i class="fa fa-github" aria-hidden="true"></i>
                    <div t-field="employee.github_website"/>
                </t>
                <t t-if="employee.linkedin_website">
                    <i class="fa fa-linkedin" aria-hidden="true"></i>
                    <div t-field="employee.linkedin_website"/>
                </t>
                <t t-if="employee.twitter_website">
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                    <div t-field="employee.twitter_website"/>
                </t>
            </xpath>
        </template>
    </data>
</openerp>
