<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_website_twitter_simple"  model="ir.ui.view">
            <field name="name">website.twitter.simple</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form" />    
            <field name="arch" type="xml">
                <xpath expr="//div[@name='social_media']" position="after" >
                    <separator string='twitter simple website widget configuration' />
                    <group name="twitter_simple" >
                        <field name="twitter_api_key" password="True" />
                        <field name="twitter_api_secret" password="True" />
                        <field name="twitter_token" password="True" />
                        <field name="twitter_token_secret" password="True" />
                    </group>
                </xpath>
            </field>
        </record>


       <record id="view_twusers_simple" model="ir.ui.view">
           <field name="name">My mentioned twitter users </field>
           <field name="model">twitter.user</field>
           <field name="arch" type="xml">
               <tree>
                    <field name="twitter_user_id"/>
                    <field name="twitter_user_screen_name"/>
                    <field name="twitter_user_name"/>
                    <field name="mentions"/>
                </tree>
           </field>
        </record>



        <record model="ir.actions.act_window" id="act_view_twusers_simple">
            <field name="name">Mentioned Twitter Users</field>
            <field name="res_model">twitter.user</field>
            <field name="view_mode">tree</field>
        </record>


        <menuitem 
            id="menu_twuser" 
            parent="knowledge.menu_document2" 
            name="Mentioned twitter user" 
            action="act_view_twusers_simple" sequence="99"/>





       <record id="view_tweets_simple" model="ir.ui.view">
           <field name="name"> Latest Tweets </field>
           <field name="model">website.tweet</field>
           <field name="arch" type="xml">
               <tree>
                    <field name="tweet_id"/>
                    <field name="text"/>
                    <field name="author"/>
                    <field name="tweet_create_date"/>
                </tree>
           </field>
        </record>

        <record model="ir.actions.act_window" id="act_view_tweets_simple">
            <field name="name">Latest Tweets</field>
            <field name="res_model">website.tweet</field>
            <field name="view_mode">tree</field>
        </record>


        <menuitem 
            id="menu_tweets" 
            parent="knowledge.menu_document2" 
            name="Latest Tweets" 
            action="act_view_tweets_simple" sequence="99"/>
    </data>
</openerp>
