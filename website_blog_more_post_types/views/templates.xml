<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
      <template id="show_post_complete_types" inherit_id="website_blog.blog_post_complete">
          <xpath expr="//div[@id='blog_content']" position="before">
              <t t-if="blog_post.thumbnail">
                <div class="pull-left" style = "margin: 5px 12px 5px 5px;"  t-field="blog_post.thumbnail.datas"  t-field-options='{"widget": "image", "class" : " pull-left mt-16 media-object" ,  "max_width": "blog_post.blog_id.thumbnail_width"}'/>
              </t>
          </xpath>
      <xpath expr="//h2[@t-field='blog_post.subtitle']" position="after">
          <!--TODO editing types and teaser in the frontend-->
      </xpath>
    </template>
  </data>
</openerp>
