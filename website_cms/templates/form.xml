<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<template id="page_form" name="CMS Add Page Form">

  <t t-call="website.layout">
    <t t-if="False">
      # we can override default action via form values
    </t>
    <form
      t-att-action="form_action or '/cms/add-page'"
      method="POST"
      class="container-fluid mt32"
      enctype="multipart/form-data">

      <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

      <div class="form-group form-field o_website_form_required_custom">
        <label class="col-md-3 col-sm-4 control-label" for="name">Name</label>
        <div class="col-md-7 col-sm-8">
          <input type="text"
            class="form-control o_website_form_input"
            name="name"
            t-att-value="request.params.get('name', '')"
            required="1"
            />
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>

    </form>
  </t>

</template>

</data>
</openerp>
